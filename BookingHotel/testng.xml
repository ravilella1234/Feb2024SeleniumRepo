<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test thread-count="5" name="Create New Booking Test pay@online">
  <parameter name="action" value="pay@online"></parameter>
    <classes>
    	<class name="testcases.Booking">
    		<methods>
    			<include name="newBooking"></include>
    		</methods>
    	</class>
    	
     	<class name="testcases.PaymentManagement">
     	<methods>
     		<include name="applyDiscount"></include>
     		<include name="makePayment"></include>
     	</methods>
     	</class>
     	
      	<class name="testcases.CustomerCommunication">
      		<methods>
      			<include name="checkEmailVerification"></include>
      			<include name="checkMobileVerification"></include>
      		</methods>
      	</class>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="Create New Booking Test pay@offline">
  <parameter name="action" value="pay@offline"></parameter>
    <classes>
    	<class name="testcases.Booking">
    		<methods>
    			<include name="newBooking"></include>
    		</methods>
    	</class>
    	
     	<class name="testcases.PaymentManagement">
     	<methods>
     		<include name="applyDiscount"></include>
     		<include name="makePayment"></include>
     	</methods>
     	</class>
     	
      	<class name="testcases.CustomerCommunication">
      		<methods>
      			<include name="checkEmailVerification"></include>
      			<include name="checkMobileVerification"></include>
      		</methods>
      	</class>
    </classes>
  </test> <!-- Test -->
  
  
  
  
</suite> <!-- Suite -->
